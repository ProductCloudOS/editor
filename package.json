{
  "name": "pc-editor",
  "version": "1.0.0",
  "description": "Browser based WYSIWYG editor library for PDF generation from data",
  "main": "dist/pc-editor.js",
  "module": "dist/pc-editor.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite serve src/demo",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "rollup -c",
    "build:types": "tsc --project tsconfig.lib.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build:demo": "vite build src/demo --outDir ../../dev-dist",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "wysiwyg",
    "editor",
    "pdf",
    "canvas",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "rollup": "^4.6.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1"
  }
}
